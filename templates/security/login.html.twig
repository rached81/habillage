{% extends 'base.html.twig' %}


{% block title %}Connexion !{% endblock %}

{% block body %}
 {% if error %}
<div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security') }}</div>
{% endif %}

    <div class="container">
        <h1>Connexion  ! </h1>
            <form class="mt-10" action="{{ path('admin.security.login') }}" method="POST">
               <div class="form-group" >
                   <input type="text"  class="form-control" required name="_username"  placeholder="Tappez votre matricule"/>
               </div>
                <div class="form-group" >
                    <input type="password"  class="form-control" required name="_password" placeholder="Tappez votre mot de passe" />
                </div>
                <div class="form-group" >
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <button type = "submit" class="btn btn-done btn-success">Connexion !</button>
                </div>
            </form>

    </div>
{% endblock %}